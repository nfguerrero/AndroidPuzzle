<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dsherratt.trialapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="97dp"
        android:id="@+id/tempF"
        android:hint="Enter Temp in Degrees F"
        android:textAlignment="center"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/tempC"
        android:layout_alignStart="@+id/tempC" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/tempC"
        android:hint="Enter Temp in Degrees C"
        android:textAlignment="center"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/calcF2C"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/calcC2F"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAlignment="center"
        android:layout_below="@+id/tempC"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="C2F or F2C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/convertedValue"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/convertedValue"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcF2C"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tempF"
        android:layout_alignLeft="@+id/calcC2F"
        android:layout_alignStart="@+id/calcC2F" />

</RelativeLayout>
